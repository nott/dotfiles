{% for box in boxes %}
IMAPAccount {{ box.name }}
Host {{ box.host }}
User {{ box.user }}
PassCmd "{{ box.passcmd }}"
SSLType IMAPS
CertificateFile {{ box.certfile | default("/etc/ssl/certs/ca-certificates.crt") }}

IMAPStore {{ box.name }}-remote
Account {{ box.name }}

MaildirStore {{ box.name }}-local
Path ~/mail/{{ box.name }}/
Inbox ~/mail/{{ box.name }}/Inbox

Channel {{ box.name }}
Master :{{ box.name }}-remote:
Slave :{{ box.name }}-local:
Patterns {{ box.patterns | default("*") }}
Create Both
SyncState *

{% endfor %}
